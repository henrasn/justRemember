<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.henrasetianugraha.e_commerce.Activity.MainActivity">

    <ProgressBar
        android:layout_width="match_parent"
        android:padding="150dp"
        android:layout_height="match_parent"
        android:id="@+id/pb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sort_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="btnSort"
            android:layout_weight="1"
            android:text="@string/btn_sort" />

        <Button
            android:onClick="btnFilter"
            android:id="@+id/btn_filter_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_filter" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main"
        android:padding="4dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>